<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_statement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.teamtreehouse.whichanimalareyou.ui.StatementActivity"
    android:backgroundTint="@android:color/white"
    android:background="@android:color/white">

    <Button
        android:text="Finish!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/finishButton"
        android:textColor="@android:color/holo_blue_light"
        android:backgroundTint="@android:color/white"
        android:textSize="20sp"
        android:background="@android:color/white"/>

    <TextView
        android:text="Which Animal Are You?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/titleTextView"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:textColor="@color/holo_blue_light_half_transparency"
        android:textSize="20sp"
        android:padding="10dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statementTextView3"
        android:layout_centerHorizontal="true"
        android:id="@+id/spinner3"
        android:padding="5dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/statementTextView4"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="5dp"
        android:layout_below="@+id/spinner3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_light"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner4"
        android:padding="5dp"
        android:layout_below="@+id/statementTextView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/statementTextView5"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_below="@+id/spinner4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_light"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner5"
        android:padding="5dp"
        android:layout_below="@+id/statementTextView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/finishButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/captionEditText"
        android:textSize="16sp"
        android:hint="@string/captionEditTextHint"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/statementTextView1"
        android:textAlignment="center"
        android:text="Statement"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="5dp"
        android:background="@android:color/holo_blue_light"
        android:layout_below="@+id/titleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:padding="5dp"
        android:layout_below="@+id/statementTextView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/statementTextView2"
        android:textAlignment="center"
        android:textSize="18sp"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:background="@android:color/holo_blue_light"
        android:layout_below="@+id/spinner1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:padding="5dp"
        android:layout_below="@+id/statementTextView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/statementTextView3"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="5dp"
        android:background="@android:color/holo_blue_light"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
